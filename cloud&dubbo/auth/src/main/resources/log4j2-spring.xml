<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
	<Appenders>
		<Console name="STDOUT" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%d %-5p [%t] %C{2}(%F:%L) - %m%n" />
		</Console>
		<RollingFile name="RollingFile" fileName="logs/auth.log"
			filePattern="logs/$${date:yyyy-MM}/auth-%d{yyyy-MM-dd}-%i.log"
			immediateFlush="true">
			<PatternLayout>
				<Pattern>%d %-5p [%t] %C{2}(%F:%L) - %m%n</Pattern>
			</PatternLayout>
			<Policies>
				<TimeBasedTriggeringPolicy />
				<SizeBasedTriggeringPolicy size="50 MB" />
			</Policies>
			<DefaultRolloverStrategy max="10" />
		</RollingFile>
		<NoSql name="databaseAppender">
			<MongoDb3 databaseName="applicationDb" collectionName="applicationLog" server="10.21.14.164" port="27017" />
		</NoSql>
		<Async name="ASYNC">
			<AppenderRef ref="RollingFile" />
			<AppenderRef ref="STDOUT" />
		</Async>
	</Appenders>
	<Loggers>
		<logger name="org.quartz" level="warn" additivity="true">
			<AppenderRef ref="RollingFile" />
		</logger>

		<logger name="com.dangdang" level="warn" additivity="true">
			<AppenderRef ref="RollingFile" />
		</logger>

		<logger name="org.apache.zookeeper" level="warn"
			additivity="true">
			<AppenderRef ref="RollingFile" />
		</logger>

		<logger name="org.apache.curator" level="warn"
			additivity="true">
			<AppenderRef ref="RollingFile" />
		</logger>

		<logger name="org.springframework" level="warn"
			additivity="true">
			<AppenderRef ref="RollingFile" />
		</logger>

		<logger name="com.mongodb" level="warn" additivity="true">
			<AppenderRef ref="RollingFile" />
		</logger>

		<logger name="com.alibaba.nacos" level="warn" additivity="true">
			<AppenderRef ref="RollingFile" />
		</logger>

		<logger name="com.aii.ipaas.pushc" level="warn"
			additivity="true">
			<AppenderRef ref="RollingFile" />
		</logger>

		<logger name="com.aii.ipaas.pushc.define.dao" level="debug"
			additivity="true">
			<AppenderRef ref="RollingFile" />
		</logger>

		<Root level="error">
			<AppenderRef ref="RollingFile" />
			<AppenderRef ref="STDOUT" />
		</Root>
	</Loggers>
</Configuration>